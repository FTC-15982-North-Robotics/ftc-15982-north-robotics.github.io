---
export interface Props {
  URL: string;
  name: string;
  date: string;
  alt?: string;
}

const { URL, name, alt, date } = Astro.props as Props;
---

<figure class="container">
  <img src={URL} alt={alt} />
</figure>

<style>
  .container {
    display: grid;
    grid-template-rows: auto auto;
  }
  img {
    grid-row-start: 1;
    width: 100%;
  }
</style>
